---
import BaseLayout from './BaseLayout.astro';
import { getRelativeLocaleUrl } from 'astro:i18n';

interface Props {
  title: string;
  icon?: string;
}

const { title, icon } = Astro.props;
const currentLocale = Astro.currentLocale || 'es'; // Default to Spanish
---

<BaseLayout title={`${title} | ${currentLocale === 'es' ? 'Herramientas' : 'Tools'} | Juliano`}>
  <div class="max-w-3xl mx-auto space-y-10">
    <!-- Breadcrumb -->
    <nav class="text-sm text-gray-500 mb-2">
      <a href={getRelativeLocaleUrl(currentLocale, '/')} class="hover:text-yellow-500">{currentLocale === 'es' ? 'Inicio' : 'Home'}</a>
      <span class="mx-2">/</span>
      <a href={getRelativeLocaleUrl(currentLocale, '/tools')} class="hover:text-yellow-500">{currentLocale === 'es' ? 'Herramientas' : 'Tools'}</a>
      <span class="mx-2">/</span>
      <span class="text-gray-700">{title}</span>
    </nav>

    <!-- Header -->
    <header class="text-center space-y-2">
      {icon && (
        <div class="text-5xl">{icon}</div>
      )}
      <h1 class="text-4xl font-bold text-gray-900">{title}</h1>
      <p class="text-gray-500 text-sm">
        {currentLocale === 'es'
          ? 'Parte de mi caja de herramientas creativa — conectando código, lógica y arte.'
          : 'Part of my creative toolkit — bridging code, logic, and art.'
        }
      </p>
    </header>

    <!-- Main Content -->
    <main class="pt-6">
      <slot />
    </main>
  </div>
</BaseLayout>
