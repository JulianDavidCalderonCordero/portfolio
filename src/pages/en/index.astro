---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { loadTranslations, t } from '../../utils/i18n';

const locale = Astro.currentLocale || 'en';
await loadTranslations(locale);
---

<BaseLayout title="Juliano | Software & Life Patterns">
  <section class="text-center space-y-6">
    <h1 class="text-4xl font-bold text-gray-900">{t('home.title', locale)}</h1>
    <p class="text-lg text-gray-700 max-w-xl mx-auto">
      {t('home.subtitle', locale)}
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6 mt-8">
      <div class="p-4 bg-white rounded-lg shadow hover:shadow-lg transition">
        <h2 class="font-semibold text-xl mb-2">{t('home.yarnArts', locale)}</h2>
        <p class="text-gray-600">{t('home.yarnArtsDesc', locale)}</p>
      </div>
      <div class="p-4 bg-white rounded-lg shadow hover:shadow-lg transition">
        <h2 class="font-semibold text-xl mb-2">{t('home.juggling', locale)}</h2>
        <p class="text-gray-600">{t('home.jugglingDesc', locale)}</p>
      </div>
      <div class="p-4 bg-white rounded-lg shadow hover:shadow-lg transition">
        <h2 class="font-semibold text-xl mb-2">{t('home.music', locale)}</h2>
        <p class="text-gray-600">{t('home.musicDesc', locale)}</p>
      </div>
      <div class="p-4 bg-white rounded-lg shadow hover:shadow-lg transition">
        <h2 class="font-semibold text-xl mb-2">{t('home.languages', locale)}</h2>
        <p class="text-gray-600">{t('home.languagesDesc', locale)}</p>
      </div>
    </div>

    <div class="mt-10 space-x-4">
      <a href="/tools" class="px-6 py-3 bg-gray-800 text-white rounded hover:bg-yellow-400 transition">{t('home.toolsLink', locale)}</a>
    </div>
  </section>
</BaseLayout>
