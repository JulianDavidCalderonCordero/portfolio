---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { loadTranslations, t } from '../../../utils/i18n';

const locale = 'en'; // English for en/ pages
await loadTranslations(locale);

// Tool cards â€” using translations
const tools = [
  {
    title: t('tools.stitchCounter', locale),
    description: t('tools.stitchCounterDesc', locale),
    status: t('tools.readySoon', locale),
    link: "/en/tools/stitch-counter",
  },
  {
    title: t('tools.siteswapValidator', locale),
    description: t('tools.siteswapValidatorDesc', locale),
    status: t('tools.prototype', locale),
    link: "/en/tools/siteswap-validator",
  },
  {
    title: t('tools.bpmTap', locale),
    description: t('tools.bpmTapDesc', locale),
    status: t('tools.mvp', locale),
    link: "/en/tools/bpm-tap",
  },
  {
    title: t('tools.pomodoro', locale),
    description: t('tools.pomodoroDesc', locale),
    status: t('tools.mvp', locale),
    link: "/en/tools/pomodoro",
  },
];
---

<BaseLayout title={`${t('tools.title', locale)} | Juliano`}>
  <section class="space-y-12">
    <!-- Intro -->
    <div class="text-center space-y-4">
      <h1 class="text-4xl font-bold text-gray-900">{t('tools.title', locale)}</h1>
      <p class="text-lg text-gray-700 max-w-2xl mx-auto">
        {t('tools.intro', locale)}
      </p>
    </div>

    <!-- Tools grid -->
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {tools.map((tool) => (
        <div class="bg-white rounded-lg shadow hover:shadow-lg transition flex flex-col">
          <div class="p-6 grow">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">{tool.title}</h3>
            <p class="text-gray-700 mb-4">{tool.description}</p>
            <span class="text-sm text-gray-500 italic">{t('nav.tools', locale)}: {tool.status}</span>
          </div>
          <div class="p-4 border-t text-center">
            <a
              href={tool.link}
              class={`inline-block px-4 py-2 rounded transition ${
                tool.link === "#"
                  ? "bg-gray-300 text-gray-500 cursor-not-allowed"
                  : "bg-gray-800 text-white hover:bg-yellow-400"
              }`}
            >
              {tool.link === "#" ? t('tools.comingSoon', locale) : t('tools.tryIt', locale)}
            </a>
          </div>
        </div>
      ))}
    </div>

    <!-- CTA -->
    <div class="text-center mt-16 space-y-4">
      <p class="text-gray-700 text-lg">
        {t('tools.footerText', locale)}
      </p>
      <a href="/en/contact"
         class="px-6 py-3 bg-gray-800 text-white rounded hover:bg-yellow-400 transition">
        {t('tools.contactLink', locale)}
      </a>
    </div>
  </section>
</BaseLayout>
