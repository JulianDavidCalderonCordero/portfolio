---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { loadTranslations, t } from '../../utils/i18n';

const locale = 'en'; // English for en/ pages
await loadTranslations(locale);
---

<BaseLayout title={`${t('about.title', locale)} | Juliano`}>
  <section class="space-y-12">
    <!-- Intro -->
    <div class="text-center space-y-4">
      <h1 class="text-4xl font-bold text-gray-900">{t('about.title', locale)}</h1>
      <p class="text-lg text-gray-700 max-w-2xl mx-auto">
        {t('about.intro', locale)}
      </p>
    </div>

    <!-- Software mindset -->
    <div class="bg-white rounded-lg shadow p-6 md:p-10 space-y-3">
      <h2 class="text-2xl font-semibold text-gray-900">{t('about.softwareTitle', locale)}</h2>
      <p class="text-gray-700">
        {t('about.softwareDesc', locale)}
      </p>
    </div>

    <!-- Facets and how they influence software thinking -->
    <div class="grid gap-6 md:grid-cols-2">
      <div class="bg-gray-50 rounded-lg p-6 space-y-3">
        <h3 class="text-xl font-semibold">{t('about.yarnArtsTitle', locale)}</h3>
        <p class="text-gray-700">
          {t('about.yarnArtsDesc', locale)}
        </p>
      </div>

      <div class="bg-gray-50 rounded-lg p-6 space-y-3">
        <h3 class="text-xl font-semibold">{t('about.jugglingTitle', locale)}</h3>
        <p class="text-gray-700">
          {t('about.jugglingDesc', locale)}
        </p>
      </div>

      <div class="bg-gray-50 rounded-lg p-6 space-y-3">
        <h3 class="text-xl font-semibold">{t('about.musicTitle', locale)}</h3>
        <p class="text-gray-700">
          {t('about.musicDesc', locale)}
        </p>
      </div>

      <div class="bg-gray-50 rounded-lg p-6 space-y-3">
        <h3 class="text-xl font-semibold">{t('about.languagesTitle', locale)}</h3>
        <p class="text-gray-700">
          {t('about.languagesDesc', locale)}
        </p>
      </div>
    </div>

    <!-- Closing -->
    <div class="text-center space-y-4">
      <p class="text-lg text-gray-700 max-w-2xl mx-auto">
        {t('about.closing', locale)}
      </p>

      <a href="/en/contact"
         class="inline-block px-6 py-3 bg-gray-800 text-white rounded hover:bg-yellow-400 transition">
        {t('about.contactLink', locale)}
      </a>
    </div>
  </section>
</BaseLayout>
