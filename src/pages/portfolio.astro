---
import BaseLayout from '../layouts/BaseLayout.astro';

// Example project data (you can move this later to src/data/projects.ts or JSON)
const projects = [
  {
    title: "Pomodoro Timer",
    description:
      "A simple and effective Pomodoro timer app to boost productivity with focused work sessions and breaks.",
    tech: ["Vanilla JS", "TailwindCSS", "Astro"],
    link: "/tools/pomodoro",
  },
];
---

<BaseLayout title="Portfolio | Juliano">
  <section class="space-y-12">
    <!-- Intro -->
    <div class="text-center space-y-4">
      <h1 class="text-4xl font-bold text-gray-900">Portfolio</h1>
      <p class="text-lg text-gray-700 max-w-2xl mx-auto">
        A collection of my work that merges software engineering with creativity â€” connecting
        logic, rhythm, and design across different disciplines.
      </p>
    </div>

    <!-- Projects Grid -->
    <h2 class="text-3xl font-semibold text-gray-900 mb-8 text-center">Projects</h2>
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {projects.map((project) => (
        <div class="bg-white rounded-lg shadow hover:shadow-lg transition flex flex-col">
          <div class="p-6 grow">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">{project.title}</h3>
            <p class="text-gray-700 mb-4">{project.description}</p>
            <ul class="flex flex-wrap gap-2 mb-4">
              {project.tech.map((t) => (
                <li class="bg-yellow-100 text-yellow-800 px-2 py-1 rounded text-sm">{t}</li>
              ))}
            </ul>
          </div>
          <div class="p-4 border-t text-center">
            <a href={project.link}
               class="inline-block px-4 py-2 bg-gray-800 text-white rounded hover:bg-yellow-400 transition">
              View Project
            </a>
          </div>
        </div>
      ))}
    </div>

    <!-- Optional CTA -->
    <div class="text-center mt-16 space-y-4">
      <p class="text-gray-700 text-lg">
        Want to collaborate or learn more about my work?
      </p>
      <a href="/contact"
         class="px-6 py-3 bg-gray-800 text-white rounded hover:bg-yellow-400 transition">
        Get in Touch
      </a>
    </div>
  </section>
</BaseLayout>
