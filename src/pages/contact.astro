---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact | Juliano">
  <section class="space-y-12">
    <!-- Intro -->
    <div class="text-center space-y-4">
      <h1 class="text-4xl font-bold text-gray-900">Get in Touch</h1>
      <p class="text-lg text-gray-700 max-w-2xl mx-auto">
        Whether you’d like to discuss a project, request mentorship, or just exchange ideas about
        software, creativity, or learning — I’d love to hear from you.
      </p>
    </div>

    <!-- Contact options -->
    <div class="grid md:grid-cols-3 gap-6 text-center">
      <div class="bg-gray-50 rounded-lg p-6 shadow">
        <h3 class="font-semibold text-xl mb-2">Email</h3>
        <p class="text-gray-700">Reach me directly:</p>
        <a href="mailto:hello@juliano.com.co"
           class="text-yellow-500 hover:text-yellow-600 font-medium">hello@juliano.com.co</a>
      </div>

      <div class="bg-gray-50 rounded-lg p-6 shadow">
        <h3 class="font-semibold text-xl mb-2">LinkedIn</h3>
        <p class="text-gray-700">Let’s connect professionally:</p>
        <a href="https://linkedin.com/in/juliano"
           target="_blank" class="text-yellow-500 hover:text-yellow-600 font-medium">linkedin.com/in/juliano</a>
      </div>

      <div class="bg-gray-50 rounded-lg p-6 shadow">
        <h3 class="font-semibold text-xl mb-2">GitHub</h3>
        <p class="text-gray-700">Explore my open-source projects:</p>
        <a href="https://github.com/juliano"
           target="_blank" class="text-yellow-500 hover:text-yellow-600 font-medium">github.com/juliano</a>
      </div>
    </div>

    <!-- Contact form -->
    <div class="max-w-2xl mx-auto bg-white rounded-lg shadow p-8">
      <h2 class="text-2xl font-semibold text-gray-900 mb-6 text-center">Send a Message</h2>
      <div id="form-message" class="mb-4 hidden relative">
        <button id="close-message" class="absolute top-2 right-2 text-gray-500 hover:text-gray-700 text-xl leading-none cursor-pointer">&times;</button>
      </div>
      <form id="contact-form" class="space-y-6">
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
          <input id="name" name="name" type="text" required
                 class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-yellow-400 focus:outline-none" />
        </div>

        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
          <input id="email" name="email" type="email" required
                 class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-yellow-400 focus:outline-none" />
        </div>

        <div>
          <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
          <textarea id="message" name="message" rows="5" required
                    class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-yellow-400 focus:outline-none"></textarea>
        </div>

        <div class="text-center">
          <button type="submit" id="submit-btn"
                  class="px-6 py-3 bg-gray-800 text-white rounded hover:bg-yellow-400 transition disabled:opacity-50 disabled:cursor-not-allowed">
            Send Message
          </button>
        </div>
      </form>
    </div>
  </section>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const form = document.getElementById('contact-form') as HTMLFormElement;
      const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
      const messageDiv = document.getElementById('form-message') as HTMLDivElement;
      const closeBtn = document.getElementById('close-message') as HTMLButtonElement;

      if (!form || !submitBtn || !messageDiv || !closeBtn) return;

      // Close message handler
      closeBtn.addEventListener('click', function() {
        messageDiv.className = 'mb-4 hidden';
      });

      form.addEventListener('submit', async function(e) {
        e.preventDefault();

        // Disable submit button
        submitBtn.disabled = true;
        submitBtn.textContent = 'Sending...';

        // Hide any previous messages
        messageDiv.className = 'mb-4 hidden';

        try {
          const formData = new FormData(form);
          const response = await fetch('https://formspree.io/f/xzzybygg', {
            method: 'POST',
            body: formData,
            headers: {
              'Accept': 'application/json'
            }
          });

          if (response.ok) {
            // Success
            messageDiv.className = 'mb-4 p-4 pr-8 bg-green-100 border border-green-400 text-green-700 rounded relative';
            messageDiv.innerHTML = '<span>Thank you! Your message has been sent successfully.</span>';
            messageDiv.appendChild(closeBtn);
            closeBtn.style.display = 'block';
            form.reset();
          } else {
            // Error
            throw new Error('Form submission failed');
          }
        } catch (error) {
          // Error
          messageDiv.className = 'mb-4 p-4 pr-8 bg-red-100 border border-red-400 text-red-700 rounded relative';
          messageDiv.innerHTML = '<span>Sorry, there was an error sending your message. Please try again.</span>';
          messageDiv.appendChild(closeBtn);
          closeBtn.style.display = 'block';
        } finally {
          // Re-enable submit button
          submitBtn.disabled = false;
          submitBtn.textContent = 'Send Message';
        }
      });
    });
  </script>
</BaseLayout>
