---
import BaseLayout from '../../layouts/BaseLayout.astro';

// Example project data (you can move this later to src/data/projects.ts or JSON)
const projects = [
  {
    title: "Temporizador Pomodoro",
    description:
      "Una aplicación de temporizador Pomodoro simple y efectiva para aumentar la productividad con sesiones de trabajo enfocadas y descansos.",
    tech: ["Vanilla JS", "TailwindCSS", "Astro"],
    link: "/es/tools/pomodoro",
  },
];
---

<BaseLayout title="Portafolio | Juliano">
  <section class="space-y-12">
    <!-- Intro -->
    <div class="text-center space-y-4">
      <h1 class="text-4xl font-bold text-gray-900">Portafolio</h1>
      <p class="text-lg text-gray-700 max-w-2xl mx-auto">
        Una colección de mi trabajo que fusiona ingeniería de software con creatividad — conectando
        lógica, ritmo y diseño a través de diferentes disciplinas.
      </p>
    </div>

    <!-- Projects Grid -->
    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {projects.map((project) => (
        <div class="bg-white rounded-lg shadow hover:shadow-lg transition flex flex-col">
          <div class="p-6 flex-grow">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">{project.title}</h3>
            <p class="text-gray-700 mb-4">{project.description}</p>
            <ul class="flex flex-wrap gap-2 mb-4">
              {project.tech.map((t) => (
                <li class="bg-yellow-100 text-yellow-800 px-2 py-1 rounded text-sm">{t}</li>
              ))}
            </ul>
          </div>
          <div class="p-4 border-t text-center">
            <a href={project.link}
               class="inline-block px-4 py-2 bg-gray-800 text-white rounded hover:bg-yellow-400 transition">
              Ver Proyecto
            </a>
          </div>
        </div>
      ))}
    </div>

    <!-- Optional CTA -->
    <div class="text-center mt-16 space-y-4">
      <p class="text-gray-700 text-lg">
        ¿Quieres colaborar o aprender más sobre mi trabajo?
      </p>
      <a href="/es/contact"
         class="px-6 py-3 bg-gray-800 text-white rounded hover:bg-yellow-400 transition">
        Ponte en Contacto
      </a>
    </div>
  </section>
</BaseLayout>
