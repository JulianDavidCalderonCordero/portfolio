---
import { getRelativeLocaleUrl } from 'astro:i18n';

const currentLocale = Astro.currentLocale || 'es'; // Default to Spanish
const isEnglish = currentLocale === 'en';

// Generate URLs for language switching
const englishUrl = isEnglish ? Astro.url.pathname : getRelativeLocaleUrl('en', Astro.url.pathname);
const spanishUrl = isEnglish ? getRelativeLocaleUrl('es', Astro.url.pathname.replace(/^\/en/, '')) : Astro.url.pathname;
---

<nav class="bg-gray-800 text-white shadow-md">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <a href={getRelativeLocaleUrl(currentLocale, '/')} class="text-xl font-bold">Juliano</a>
    <div class="flex items-center space-x-6">
      <ul class="flex space-x-6">
        <li><a href={getRelativeLocaleUrl(currentLocale, '/')} class="hover:text-yellow-400 transition-colors">{currentLocale === 'es' ? 'Inicio' : 'Home'}</a></li>
        <li><a href={getRelativeLocaleUrl(currentLocale, '/about')} class="hover:text-yellow-400 transition-colors">{currentLocale === 'es' ? 'Acerca de' : 'About'}</a></li>
        <li><a href={getRelativeLocaleUrl(currentLocale, '/tools')} class="hover:text-yellow-400 transition-colors">{currentLocale === 'es' ? 'Herramientas' : 'Tools'}</a></li>
        <li><a href={getRelativeLocaleUrl(currentLocale, '/contact')} class="hover:text-yellow-400 transition-colors">{currentLocale === 'es' ? 'Contacto' : 'Contact'}</a></li>
      </ul>
      <div class="flex space-x-2 ml-6">
        <a href={englishUrl} class={`px-3 py-1 rounded text-sm font-medium transition-colors ${isEnglish ? 'bg-yellow-400 text-gray-900' : 'hover:bg-gray-700'}`}>EN</a>
        <a href={spanishUrl} class={`px-3 py-1 rounded text-sm font-medium transition-colors ${!isEnglish ? 'bg-yellow-400 text-gray-900' : 'hover:bg-gray-700'}`}>ES</a>
      </div>
    </div>
  </div>
</nav>
